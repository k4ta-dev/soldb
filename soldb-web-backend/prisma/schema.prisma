generator client {
  provider = "prisma-client-js"
}

datasource db {g
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  email String @unique
  username String @unique
}

model MagicLink {
  id String @id @default(uuid())
  email String
  tokenHash String @db.VarChar(128)
  expiresAt DateTime
  used Boolean @default (false)
  createdAt DateTime @default(now())
}
